<% if schedule.errors.any? %>
  <div style="color: red;">
    <h3><%= schedule.errors.count %> 件のエラーがあります</h3>
    <ul>
      <% schedule.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: schedule, local: true do |f| %>

  <p>
    <%= f.label :title, "タイトル" %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :start_date, "開始日（yyyy/mm/dd）" %><br>
    <%= f.date_field :start_date %>
  </p>

  <p>
    <%= f.label :end_date, "終了日（yyyy/mm/dd）" %><br>
    <%= f.date_field :end_date %>
  </p>

  <p>
    <%= f.check_box :all_day %>
    <%= f.label :all_day, "終日" %>
  </p>

  <p>
    <%= f.label :memo, "メモ" %><br>
    <%= f.text_area :memo %>
  </p>

  <%= f.submit "保存する" %>

<% end %>
